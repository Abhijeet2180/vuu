{
  "includes"    : {
    "machines"  : "machines.json"
  },

  "name"        : "venuu-dev-env",
  "root-dir"    : "/opt/venuu/app/murmur",
  "magic-vars"  : {
    "foo"       : "bar"
  },
  "classes" : [
    {
      "type":               "zk",
      "script":             "${version.dir}/scripts/start-zk.bsh",
      "log":                "${app.dir}/logs/zookeeper.log",
      "days":               "Mo Tu We Th Fr Sa Su",
      "restart-times":      ["02:00:00"],
      "time-zone":          "Europe/London",
      "restart-on-upgrade"  : false
    },
    {
      "type":               "mrmr",
      "script":             "${version.dir}/scripts/start-murmur.bsh",
      "log":                "${app.dir}/logs/murmur.log",
      "days":               "Mo Tu We Th Fr Sa Su",
      "restart-times":      ["03:00:00"],
      "time-zone":          "Europe/London",
      "restart-on-upgrade"  : true
    }
  ],
  "processes" : [
    {
      "name":          "zk-1",
      "type":          "zk",
      "restart-times": ["02:40:00"],
      "host":          "vnu-dev-001"
    },
    {
      "name":          "mrmr-1",
      "type":          "mrmr",
      "restart-times": ["03:40:00"],
      "host":          "vnu-dev-001"
    },
    {
      "name":          "zk-2",
      "type":          "zk",
      "restart-times": ["02:40:00"],
      "host":          "vnu-dev-001"
    },
    {
      "name":          "mrmr-2",
      "type":          "mrmr",
      "restart-times": ["03:40:00"],
      "host":          "vnu-dev-001"
    },
    {
      "name":          "zk-3",
      "type":          "zk",
      "restart-times": ["02:40:00"],
      "host":          "vnu-dev-001"
    },
    {
      "name":          "mrmr-3",
      "type":          "mrmr",
      "restart-times": ["03:40:00"],
      "host":          "vnu-dev-001"
    }
  ]
}